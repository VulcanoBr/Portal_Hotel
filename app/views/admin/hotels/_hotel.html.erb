<div class="container" id="<%= dom_id hotel %>" >
  <div class="mb-4 d-flex justify-content-center align-items-center">
    <div class="mb-4 card card-primary" style="width: 100%;">
      <div class="card-header bg-primary text-white text-center">
        <h4 class="card-title text-center">Detalhes do Hotel</h4>
      </div>
      <div class="card-body">
        <div class="mb-2">
          <span class="fw-bold">Nome: </span>
          <span class="mx-3"><%= hotel.name %></span>
        </div>
        <div class="mb-2">
          <span class="fw-bold">Title: </span>
          <span class="mx-3"><%= hotel.title %></span>
        </div>
        <div class="mb-2">
          <span class="fw-bold">Location: </span>
          <span class="mx-3"><%= hotel.location %></span>
        </div>
        <div class="mb-2">
          <span class="fw-bold">Email: </span>
          <span class="mx-3"><%= hotel.email %></span>
        </div>
        <div class="mb-2">
          <span class="fw-bold">Telefone: </span>
          <span class="mx-3"><%= hotel.telephone %></span>
        </div>
        <div class="mb-2">
          <span class="fw-bold">Descrição: </span>
          <span class="mx-3"><%= hotel.description %></span>
        </div>
        <div class="mb-2">
          <span class="fw-bold">Número de Quartos: </span>
          <span class="mx-3"><%= hotel.total_rooms %></span>
        </div>
        <div class="mb-2">
          <span class="fw-bold">Número de Andar(es): </span>
          <span class="mx-3"><%= hotel.floors %></span>
        </div>
        <div class="mb-2">
          <span class="fw-bold">Número de quartos por Andar: </span>
          <span class="mx-3"><%= hotel.max_rooms_per_floor %></span>
        </div>
        <div class="mb-2">
          <h5>Amenities:</h5>
          <ul>
            <% @hotel.amenities.each do |amenity| %>
              <li><%= amenity.description %></li>
            <% end %>
          </ul>
        </div>
        <div class="mb-2">
          <span class="fw-bold ml-4">ZipCode: </span>
          <span class="mx-3"><%= hotel.address_zip_code %></span>
        </div>
        <div class="mb-2">
          <span class="fw-bold">Estado: </span>
          <span class="mx-3"><%= hotel.address_state %></span>
        </div>
        <div>
          <span class="fw-bold">Cidade: </span>
          <span class="mx-3"><%= hotel.address_city %></span>
        </div>
        <div>
          <span class="fw-bold">Bairro: </span>
          <span class="mx-3"><%= hotel.address_neighborhood %></span>
        </div>
        <div>
          <span class="fw-bold">Endereço: </span>
          <span class="mx-3"><%= hotel.address_street %></span>
        </div>
        <div>
          <span class="fw-bold">Numero: </span>
          <span class="mx-3"><%= hotel.address_number %></span>
        </div>
        <div>
          <span class="fw-bold">Complemento: </span>
          <span class="mx-3"><%= hotel.address_complement %></span>
        </div>
      </div>
      <div class="card-footer d-flex justify-content-center">
        
        <%= link_to "Editar", edit_admin_hotel_path(hotel), class: "btn btn-primary me-2" %>
        
        <%= link_to "Ver Lista", admin_hotels_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>