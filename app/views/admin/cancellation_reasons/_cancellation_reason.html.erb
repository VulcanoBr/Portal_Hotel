<div class="mb-4 d-flex justify-content-center align-items-center" id="<%= dom_id cancellation_reason %>">
  <div class="mb-4 card card-primary" style="width: 100%;">
    <div class="card-header bg-primary text-white text-center">
      <h4 class="card-title text-center">Detalhes do Razão do Cancelamento</h4>
    </div>
    <div class="card-body">
      <div class="mb-2">
        <span class="fw-bold">Name: </span>
        <span class="mx-3"><%= cancellation_reason.name %></span>
      </div>
      <div class="mb-2">
        <span class="fw-bold">Descrição: </span>
        <span class="mx-3"><%= cancellation_reason.description %></span>
      </div>
      <div class="mb-2">
        <span class="fw-bold">Active: </span>
        <span class="mx-3"><%= cancellation_reason.active %></span>
      </div>
      <div class="card-footer d-flex justify-content-center">
        <%= link_to "Editar", edit_admin_cancellation_reason_path(cancellation_reason), class: "btn btn-primary me-2" %>
        <%= link_to "Ver Lista", admin_cancellation_reasons_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
