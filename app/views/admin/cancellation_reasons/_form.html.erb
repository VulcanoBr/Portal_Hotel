<div class="container-xl d-flex flex-column justify-content-center ">
  <div class="card mb-4">
    <div class="card-header bg-primary text-white text-center">
      <h4 class="card-title"><%= action_name %> Tipo de Quarto</h4>
    </div>
    <%= simple_form_for [:admin, @cancellation_reason] do |form| %>
      <div class="card-body">
        <div class="row">
          <div class="col-12 col-md-6 col-lg-4">
            <%= form.input :name %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-md-6 col-lg-4">
            <%= form.input :description %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-md-6 col-lg-4">
            <%= form.input :active %>
          </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <%= link_to "Voltar", admin_cancellation_reasons_path, class: "btn btn-secondary" %>
          <%= form.button :submit, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
